<%= simple_form_for @booking do |f| %>
  <%= f.input :title, label: "Titre", placeholder: "Titre de l'événement" %>
  <%= f.input :category, label: "Catégorie", collection: Booking::CATEGORY, :prompt => "Catégorie de l'événement" %>
  <%= f.input :place, label: "Lieu", placeholder: "Lieu de l'événement" %>
  <%= f.input :start_time, label: "Début", as: :date_time_picker, input_html:
      { data:
        {
          date_format: "YYYY.MM.DD hh:mm A",
          date_day_view_header_format: 'MMM YYYY',
          date_side_by_side: true,
          # date_min_date: Time.current.strftime('%Y-%m-%d')
        }
      }%>

      <%= f.input :end_time, label: "Fin", as: :date_time_picker, input_html:
      { data:
        {
          date_format: "YYYY.MM.DD hh:mm A",
          date_day_view_header_format: 'MMM YYYY',
          date_side_by_side: true,
          date_min_date: Time.current.strftime('%Y-%m-%d')
        }
      }
      %>
  <%= f.button :submit, "Créer", class: 'btn btn-secondary' %>
<% end %>
