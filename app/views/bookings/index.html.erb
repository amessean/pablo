<%= render 'shared/navbar' %>
<div class="container">
  <h1>Mes événements</h1>
 <% @future_bookings.each do |booking| %>
<%= link_to booking.title, booking_path(booking) %>
<%= booking.category %>
<%= link_to edit_booking_path(booking) do %>
<i class="fas fa-edit"></i>
<% end %>
<%= link_to booking_path(booking), method: :delete, data: { confirm: "Êtes-vous sûr?" } do %>
<i class="fas fa-trash"></i>
<% end %>
<% end %>
<h1>Mes événements passés</h1>
<% @previous_bookings.each do |booking| %>
<%= link_to booking.title, booking_path(booking) %>
<%= booking.category %>
<%= link_to edit_booking_path(booking) do %>
<i class="fas fa-edit"></i>
<% end %>
<%= link_to booking_path(booking), method: :delete, data: { confirm: "Êtes-vous sûr?" } do %>
<i class="fas fa-trash"></i>
<% end %>
<% end %>
</div>


